 <div class="row">
  <h1>Shortener..er</h1>
    <%=form_for Url.new do |f|%>
      <%= f.url_field :full_url, placeholder: "Please include http://", id: 'url_new' %>
      <%= f.submit "begin Shortener", class: 'button tiny round'%>
    <%end%><br>

  <% @urls.each do |url|%>
    <div class="large-6 columns panel">
      <ul>
        <li><%= url.full_url %></li>
        <li><a href="#" data-reveal-id="myModal"><%= link_to "shorterish link", url_path(url.id), :onclick => "alert('Now Leaving Shortener')"%></a></li>
        <li><%= url.popularity %></li>
        <li><%= url.title %></li>
      </ul>
    </div>
  <% end %>
</div>

<div class="row">
  <%= form_tag search_path, :method => 'get' do %>
    <div class="large-8 small-9 columns nav-padding">
      <%= text_field_tag :search, params[:search], placeholder: "Search" %>
    </div>
    <div class="large-4 small-3 columns nav-padding">
      <button class="alert button expand" id="click_search" name="search_button" type="submit" value="Search">Search
      </button>
    </div>
  <% end %>
</div>