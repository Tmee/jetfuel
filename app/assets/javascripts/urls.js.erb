$(document).ready(function () {

  var $orders = $('.order');

  $('#order_filter_state').on('change', function () {
    var currentState = this.value;
    $orders.each(function (index, order) {
      $order = $(order);
      if ($order.data('state') === currentState) {
        $order.show();
      } else {
        $order.hide();
      }
    });
  });

});